<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smart_refreshlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moren_f2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.kevin.wraprecyclerview.WrapRecyclerView
                    android:id="@+id/cars_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    android:scrollbars="none"></com.kevin.wraprecyclerview.WrapRecyclerView>

                <FrameLayout
                    android:id="@+id/car_fra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_alpha"
                    android:visibility="gone"></FrameLayout>
            </LinearLayout>
        <com.dream.moka.CumstomView.MyRecyclerView
            android:id="@+id/letter_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scrollbars="none"></com.dream.moka.CumstomView.MyRecyclerView>
    </RelativeLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
