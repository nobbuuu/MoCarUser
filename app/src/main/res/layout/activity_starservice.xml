<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_lay"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/color333"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/dimen_left"
        android:textSize="15sp"
        android:text="您现在还未开启0.1元/km保养服务，可以通过以下方式开启："
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="自主开启"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price_tv1"
            android:layout_width="wrap_content"
            android:text="需充值5元"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_left"
        android:text="1.一张0.1元/km保养代驾券"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/color666"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price_tv2"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_left"
        android:text="2.500积分（可抵扣5元代驾券）"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/color666"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price_tv3"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen_left"
        android:text="3.充值5元可在用户钱包查看"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:textColor="@color/color666"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sure_tv"
        android:layout_width="match_parent"
        android:text="确定"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="66dp"
        android:background="@drawable/shape_login_btn"
        android:layout_height="36dp" />

</LinearLayout>
