<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/orderType"
            android:layout_width="wrap_content"
            android:text="保养"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginBottom="12dp"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="@color/fengexian4"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/moren_e5"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">
        <LinearLayout
            android:id="@+id/one_lay"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="车牌号"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="车辆"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="订单时间"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:layout_marginTop="13dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/one_lay"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/carNo"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:textSize="14sp"
                android:textColor="@color/color666"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/carName"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginTop="13dp"
                android:textSize="14sp"
                android:textColor="@color/color666"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:text="00:00"
                android:layout_marginTop="13dp"
                android:textSize="14sp"
                android:textColor="@color/color666"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="¥"
                android:textSize="20.5sp"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:text="0"
                android:textSize="29.5sp"
                android:textColor="@color/color333"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="@color/moren_e5"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/one_tv"
            android:text="去支付"
            android:layout_marginRight="18dp"
            style="@style/order_btn"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/two_tv"
            android:text="申请退款"
            android:layout_marginRight="18dp"
            style="@style/order_btn"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/three_tv"
            android:text="回车时间"
            android:layout_marginRight="@dimen/dimen_left"
            style="@style/order_btn"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
