<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="14dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rname_tv"
                android:layout_width="wrap_content"
                android:text="王先生"
                android:textSize="11sp"
                android:textColor="@color/color999"
                android:layout_gravity="end"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/rcontent_tv"
                android:layout_width="wrap_content"
                android:text="我想换机油"
                android:layout_marginTop="5dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:background="@drawable/shape_white_corner"
                android:textSize="13sp"
                android:textColor="@color/color666"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_avatar01"
            android:layout_marginTop="@dimen/dimen_left"
            android:layout_marginRight="14dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
