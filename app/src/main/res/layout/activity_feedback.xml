<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/moren_f2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/feedback_relay"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dimen_left"
            android:background="@drawable/shape_stroke_a0"
            android:layout_height="189.5dp">
            <EditText
                android:id="@+id/feedback_edt"
                android:layout_width="match_parent"
                android:hint="写下您的意见，我们用心聆听做得更好"
                android:textSize="12sp"
                android:gravity="top"
                android:textColorHint="@color/color999"
                android:background="@null"
                android:layout_margin="@dimen/dimen_left"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/title_height">
        <TextView
            android:layout_width="wrap_content"
            android:text="姓名"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:background="@null"
            android:textSize="12sp"
            android:hint="输入您的姓名"
            android:textColor="@color/color333"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/title_height">
        <TextView
            android:layout_width="wrap_content"
            android:text="电话"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="13dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_marginLeft="27dp"
            android:background="@null"
            android:textSize="12sp"
            android:hint="输入您的电话号码"
            android:textColor="@color/color333"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></View>

    <TextView
        android:id="@+id/btn"
        android:layout_marginTop="36dp"
        style="@style/sure_btnstyle"
        android:text="提交" />

</LinearLayout>
