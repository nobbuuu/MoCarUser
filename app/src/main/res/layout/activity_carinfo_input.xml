<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_lay"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="车主姓名"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/username_edt"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_centerInParent="true"
                android:hint="请输入姓名"
                android:textSize="12sp"
                android:textColorHint="@color/color666"
                android:textColor="@color/color333"
                android:gravity="center"
                android:layout_height="40dp" />

        </RelativeLayout>
        <include layout="@layout/view_fengexian"></include>
        <RelativeLayout
            android:id="@+id/buycar_relay"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="购车时间"
                android:textColor="@color/color333"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/buycar_date"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/next_forward"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/fengexian"
            android:layout_height="0.5dp"></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/carjianum_tv"
                android:layout_width="wrap_content"
                android:text="车架号"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/carnum_edt"
                android:layout_width="match_parent"
                android:background="@null"
                android:textSize="12sp"
                android:textColorHint="@color/color666"
                android:hint="请输入车架号"
                android:layout_toRightOf="@+id/carjianum_tv"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/color333"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/fengexian"
            android:layout_height="0.5dp"></RelativeLayout>
        <RelativeLayout
            android:id="@+id/carlogin_relay"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="上牌日期"
                android:textColor="@color/color333"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/carlogin_date"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/next_forward"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/fengexian"
            android:layout_height="0.5dp"></RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="提示：请准确的完善信息，以便准确的为您服务"
            android:textColor="@color/color666"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="11dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/next_tv"
            android:layout_width="match_parent"
            android:text="下一步"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="66dp"
            android:layout_marginRight="66dp"
            android:background="@drawable/shape_login_btn"
            android:layout_height="36dp" />
    </LinearLayout>
</LinearLayout>
