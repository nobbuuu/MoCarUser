<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shopPic_iv"
            android:layout_width="51dp"
            android:layout_margin="@dimen/dimen_left"
            android:layout_height="63dp"
            android:src="@mipmap/img_placeholderfigure01"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shopName_tv"
                android:layout_width="wrap_content"
                android:text="摩喀洗车店"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/start_lay"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/score_tv"
                    android:layout_width="wrap_content"
                    android:text="4星"
                    android:textSize="13sp"
                    android:textColor="@color/color666"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/mileaddress_tv"
                android:layout_width="wrap_content"
                android:text="1.2km  深圳市南山区科技园绿创云谷大厦"
                android:textSize="13sp"
                android:textColor="@color/color666"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
