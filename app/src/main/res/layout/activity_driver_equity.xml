<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimen_left"
    android:paddingRight="@dimen/dimen_left"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="您正在享受以下权益"
        android:textSize="16sp"
        android:textColor="@color/color333"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="17dp"
        android:layout_height="wrap_content" />
    <include layout="@layout/view_fengexian"></include>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_income"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="代驾收入"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="代驾司机在接送车中将得到收入"
        android:textColor="@color/color666"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="@dimen/dimen_left"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_commission"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="佣金"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="邀请用户注册账户，用户在平台做汽车养车服务您将获得佣金收入"
        android:textColor="@color/color666"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="@dimen/dimen_left"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sure_tv"
        android:text="退回押金"
        android:layout_marginTop="77dp"
        style="@style/sure_btnstyle"
        />
</LinearLayout>
