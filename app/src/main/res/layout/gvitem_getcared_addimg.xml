<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/addimg_relay1"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:background="@drawable/shape_xuxian_coner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_sheet" />

        <ImageView
            android:id="@+id/addimg_iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/addimg_tv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_delete01"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="前方45°"
        android:textColor="@color/color666"
        android:textSize="12sp" />
</LinearLayout>
