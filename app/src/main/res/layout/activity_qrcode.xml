<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root_lay"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/titlebar_relay"
        style="@style/relaystyle_toolbar">
        <RelativeLayout
            android:id="@+id/back_relay"
            style="@style/relaystyle_back">
            <ImageView
                style="@style/imgstyle_back" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title_tv"
            style="@style/textstyle_titlecenter"
            android:text="我的二维码" />
        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_centerVertical="true"
            android:src="@mipmap/shareunselect"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_car"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="识别二维码，即可注册登录《摩喀蓝扳手》养车APP"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
