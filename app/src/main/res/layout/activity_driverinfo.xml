<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp">
        <ImageView
            android:id="@+id/driver_icon"
            android:layout_width="61dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="61dp"
            android:src="@mipmap/img_placeholderfigure01"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_toRightOf="@+id/driver_icon"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:text="电话："
                android:textColor="@color/color666"
                android:textSize="14sp"
                android:layout_marginTop="14dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/call_phone"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_call"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_coordinate"
                android:layout_marginRight="@dimen/dimen_left"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/view_fengexian"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="QQ号"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginLeft="143dp"
            android:textColor="@color/color666"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="驾驶证档案编号"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/licence_Code"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginLeft="81dp"
            android:textColor="@color/color666"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/estimatedTime_lay"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="预计到达时间"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginLeft="93dp"
            android:textColor="@color/color666"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/view_fengexian"></include>
    <TextView
        android:layout_width="wrap_content"
        android:text="服务说明："
        android:textColor="@color/color333"
        android:textSize="14sp"
        android:layout_marginLeft="@dimen/dimen_left"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="1.预约接送车，司机在出发前半小时，后台与客户进行确认接车地点"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="@dimen/dimen_left"
        android:layout_marginRight="@dimen/dimen_left"
        android:lineSpacingExtra="17dp"
        android:textSize="13sp"
        android:textColor="@color/color666"
        android:layout_height="wrap_content" />
</LinearLayout>
