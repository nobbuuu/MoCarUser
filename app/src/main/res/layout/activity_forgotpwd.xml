<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_lay"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/blue_them">

        <RelativeLayout
            android:id="@+id/back_relay"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginLeft="@dimen/dimen_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/nav_button_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="@dimen/titlesize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="73dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="账号"
                    android:textColor="@color/color333"
                    android:layout_marginLeft="24dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="41dp"
                    android:hint="输入手机号码"
                    android:textSize="12sp"
                    android:background="@null"
                    android:textColorHint="@color/color666"
                    android:layout_height="20dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/blue_them"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_height="1dp"></RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="下一步"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="66dp"
                android:background="@drawable/shape_login_btn"
                android:layout_height="36dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/call_service"
            android:layout_width="wrap_content"
            android:text="联系客服"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color666"
            android:layout_marginBottom="33dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
