<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:psd="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="请输入新的支付密码" />

        <com.dream.moka.CumstomView.PayPsdInputView
            android:id="@+id/paypwd_view"
            android:layout_width="match_parent"
            android:inputType="numberPassword"
            android:layout_margin="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            psd:maxCount="6"
            psd:psdType="weChat"
            psd:rectAngle="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sure_tv"
            style="@style/sure_btnstyle"
            android:layout_marginTop="125dp"
            android:text="修改密码" />

        <TextView
            android:id="@+id/forgotpwd_tv"
            android:layout_width="wrap_content"
            android:text="忘记交易密码"
            android:layout_marginTop="30dp"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/contac_service"
        android:text="联系客服"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
