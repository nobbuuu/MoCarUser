<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/blue_them">

        <RelativeLayout
            android:id="@+id/back_relay"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginLeft="@dimen/dimen_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/nav_button_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增地址"
            android:textColor="@color/white"
            android:textSize="@dimen/titlesize" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="姓名"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="108dp"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:textColorHint="@color/color999"
            android:hint="请填写联系人"/>
    </RelativeLayout>
    <include layout="@layout/view_fengexian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="手机号"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="phone"
            android:background="@color/white"
            android:layout_marginLeft="108dp"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:textColorHint="@color/color999"
            android:hint="请填写手机号"/>
    </RelativeLayout>
    <include layout="@layout/view_fengexian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="所在地区"/>
        <TextView
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="108dp"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:hint="请选择地区"
            android:text=""
            android:drawableRight="@mipmap/next_forward"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <include layout="@layout/view_fengexian"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="详细地址"/>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="108dp"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:textColorHint="@color/color999"
            android:hint="请填写详细街道地址" />
    </RelativeLayout>
    <include layout="@layout/view_fengexian"/>
    <TextView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/shape_login_btn"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="13sp" />
</LinearLayout>  