<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moren_f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_margin="12dp"
        android:background="@drawable/shape_white_corner">

        <ImageView
            android:id="@+id/carIcon"
            android:layout_width="71.5dp"
            android:layout_height="71.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/img_car" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stylename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text=""
                android:textColor="@color/color333"
                android:textSize="15sp" />\

            <CheckBox
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/select_bg_yellow_stoke"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text=" 设为默认 "
                android:textColor="@drawable/select_color_white_333"
                android:textSize="12sp" />
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:text="已设为默认"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/white"-->
            <!--android:background="@drawable/shape_yellow"-->
            <!--android:paddingTop="5dp"-->
            <!--android:paddingBottom="5dp"-->
            <!--android:paddingLeft="12dp"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:paddingRight="12dp"-->
            <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="14dp"
                        android:text="基本信息"
                        android:textColor="@color/color333"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="14dp"
                        android:text="款型"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="37dp"
                        android:layout_marginTop="14dp"
                        android:text=""
                        android:textColor="@color/color666"
                        android:textSize="14.5sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:text="上次保养时间"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lastTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="14dp"
                        android:text=""
                        android:textColor="@color/color666"
                        android:textSize="13sp" />
                </RelativeLayout>

                <include layout="@layout/view_fengexian"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:text="车牌号"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/carnum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color666"
                        android:textSize="13sp" />
                </RelativeLayout>

                <include layout="@layout/view_fengexian"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="14dp"
                        android:text="上次保养里程数"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lastmileage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color666"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" km"
                        android:textColor="@color/color666"
                        android:textSize="13sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="14dp"
                        android:text="行驶总里程"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/allmileage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入总里程数"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color999"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" km"
                        android:textColor="@color/color666"
                        android:textSize="13sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:text="上牌日期"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/login_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/next_forward"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/login_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/login_icon"
                        android:clickable="false"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color666"
                        android:textSize="14sp" />
                </RelativeLayout>

                <include layout="@layout/view_fengexian"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="14dp"
                        android:text="购车时间"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/buyCar_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/next_forward"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/buyCar_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/buyCar_icon"
                        android:gravity="right"
                        android:text="2018-12-03"
                        android:textColor="@color/color666"
                        android:textSize="14sp" />
                </RelativeLayout>

                <include layout="@layout/view_fengexian"></include>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="14dp"
                        android:text="车架号"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/chejia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="dlkafhjdkjlfdlksjflsd"
                        android:textColor="@color/color666"
                        android:layout_marginRight="20dp"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="15dp"
                        android:text="车险信息"
                        android:textColor="@color/color333"
                        android:textSize="15sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:text="商业保险公司"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/baoxianName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color333"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/baoxianIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/next_forward"
                        android:visibility="invisible" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="车主姓名"
                            android:textColor="@color/color333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/owner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="14dp"
                            android:background="@null"
                            android:text=""
                            android:textColor="@color/color333"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorcc"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="14dp"
                            android:text="保险到期日"
                            android:textColor="@color/color333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/baoxianTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="14dp"
                            android:background="@null"
                            android:clickable="false"
                            android:text=""
                            android:textColor="@color/color333"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:text="身份证号"
                        android:textColor="@color/color333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/idCardNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="50dp"
                        android:background="@null"
                        android:inputType="number"
                        android:text=""
                        android:textColor="@color/color333"
                        android:textSize="13sp" />
                </LinearLayout>

                <include layout="@layout/view_fengexian"></include>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="投保城市"
                            android:textColor="@color/color333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/baoxianCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="北京"
                            android:textColor="@color/color333"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorcc"></View>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="14dp"
                            android:text="一年内是否过户"
                            android:textColor="@color/color333"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/isGuohu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="否"
                            android:textColor="@color/color333"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
