<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="户名"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/username_edt"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="请输入户名"
            android:padding="15dp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:textColorHint="@color/color999"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/view_fengexian"></include>
    <RelativeLayout
        android:id="@+id/bank_choserelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="开户行"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bankName"
            android:layout_width="wrap_content"
            android:background="@null"
            android:hint="银行卡开户行"
            android:layout_centerInParent="true"
            android:textColorHint="@color/color999"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        <ImageView
            style="@style/imgstyle_next"
             />
    </RelativeLayout>
    <include layout="@layout/view_fengexian"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="卡号"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/cardNum"
            android:layout_width="match_parent"
            android:background="@null"
            android:hint="银行卡号"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColorHint="@color/color999"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/view_fengexian"></include>
    <TextView
        android:id="@+id/sure_tv"
        android:text="确定"
        android:layout_marginTop="68dp"
        style="@style/sure_btnstyle" />
</LinearLayout>
