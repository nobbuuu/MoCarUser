<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_lay"
    android:orientation="vertical"
    android:background="@color/moren_f2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/jifen_relay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dimen_left"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_height="125.5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jifennum_tv"
                android:layout_width="wrap_content"
                android:text="2000"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:text="积分"
                android:layout_marginLeft="11dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/purse_relay"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dimen_left"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="125.5dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="账户余额"
            android:textSize="13sp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/color333"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="¥"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pursemoney_tv"
                android:layout_width="wrap_content"
                android:text="100.00"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/recharge_tv"
            android:layout_width="wrap_content"
            android:text="充值"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="@dimen/dimen_left"
            android:textSize="13sp"
            android:textColor="@color/color333"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/shape_stroke_chonzhi"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/all_tv"
                android:layout_width="match_parent"
                android:text="全部"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <RelativeLayout
                android:id="@+id/relay1"
                android:layout_width="match_parent"
                android:background="@color/fengexian4"
                android:layout_height="2dp"></RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:background="@color/colorcc"
            android:layout_gravity="center_vertical"
            android:layout_height="16.5dp"></RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/second_tv"
                android:layout_width="match_parent"
                android:text="充值"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <RelativeLayout
                android:id="@+id/relay2"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="2dp"></RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:background="@color/colorcc"
            android:layout_gravity="center_vertical"
            android:layout_height="16.5dp"></RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/third_tv"
                android:layout_width="match_parent"
                android:text="消费"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <RelativeLayout
                android:id="@+id/relay3"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="2dp"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/purse_vp"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:background="@color/white"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
