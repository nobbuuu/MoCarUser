<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/cancle_relay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/cancle_input"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <include layout="@layout/view_fengexian"></include>
        <GridView
            android:id="@+id/topText_gv"
            android:layout_width="match_parent"
            android:numColumns="5"
            android:horizontalSpacing="0.5dp"
            android:background="@color/fengexiand9"
            android:layout_height="wrap_content"></GridView>
        <include layout="@layout/view_fengexian"></include>
        <GridView
            android:id="@+id/albNum_gv"
            android:layout_width="match_parent"
            android:numColumns="10"
            android:background="@color/fengexiand9"
            android:horizontalSpacing="0.5dp"
            android:layout_height="wrap_content"></GridView>
        <View
            android:layout_width="match_parent"
            android:background="@color/fengexiand9"
            android:layout_height="4dp"></View>
        <GridView
            android:id="@+id/zm_gv"
            android:layout_width="match_parent"
            android:numColumns="9"
            android:verticalSpacing="0.5dp"
            android:horizontalSpacing="0.5dp"
            android:background="@color/fengexiand9"
            android:layout_height="wrap_content"></GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
                <TextView
                    android:id="@+id/sure_tv"
                    android:layout_width="0dp"
                    android:text="确定"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/blue_them"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/delete_iv"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:src="@mipmap/bdicon"
                    android:background="@color/white"
                    android:layout_height="match_parent"/>
        </LinearLayout>
</LinearLayout>
