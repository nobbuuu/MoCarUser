<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_lay"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="头像"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="50dp"
            android:src="@mipmap/img_defaultavatar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/nick_name_relay"
        android:layout_width="match_parent"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="昵称"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/sex_relay"
        android:layout_width="match_parent"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="性别"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sex_tv"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/myphone_relay"
        android:layout_width="match_parent"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="我的手机"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/qq_relay"
        android:layout_width="match_parent"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="QQ"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/qqnum_tv"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/color666"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorcc"
        android:layout_height="1dp"></RelativeLayout>
</LinearLayout>
