<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dimen_left"
              android:paddingRight="@dimen/dimen_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_oldpassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="旧密码"
                android:textColor="@color/color333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/oldPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/color333"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:id="@+id/line_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blue_them"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_newpassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="新密码"
                android:textColor="@color/color333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/newPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/color333"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:id="@+id/line_newpwd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexiand9"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_confirm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="再次确认"
                android:textColor="@color/color333"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/againPwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_left"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/color333"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:id="@+id/line_pwdagain"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexiand9"></View>

        <TextView
            android:id="@+id/sure_tv"
            style="@style/sure_btnstyle"
            android:layout_marginTop="36dp"
            android:text="修改密码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/forgotpwd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_left"
        android:textColor="@color/color333"
        android:text="忘记密码"/>
</RelativeLayout>
