<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:background="@drawable/shape_white_corner"
        android:layout_height="117dp">
        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="71.5dp"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:layout_height="71.5dp"
            android:src="@mipmap/img_car"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/car_icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/brandName"
                android:layout_width="wrap_content"
                android:text="北京奔驰"
                android:textSize="15sp"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/stylename"
                android:layout_width="wrap_content"
                android:text="2017款E320L4MATIC运动型"
                android:textSize="15sp"
                android:layout_marginTop="11dp"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/defult"
                android:layout_width="wrap_content"
                android:text="已设为默认"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_yellow"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:layout_marginTop="12dp"
                android:paddingRight="12dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_delete"
            android:layout_alignParentRight="true"
            android:paddingTop="11dp"
            android:paddingRight="13dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
