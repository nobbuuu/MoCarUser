<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/root_lay"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/blue_them">

        <RelativeLayout
            android:id="@+id/back_relay"
            android:layout_width="@dimen/dimen45"
            android:layout_height="@dimen/dimen45"
            android:layout_marginLeft="@dimen/dimen_left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/nav_button_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="常见问题"
            android:textColor="@color/white"
            android:textSize="@dimen/titlesize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/order_relay"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="订单"
                    android:textSize="15sp"
                    android:textColor="@color/color333"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/order_riv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/next_forward"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:layout_height="1dp"></RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_rv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/fenrelay1"
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:visibility="gone"
                android:layout_height="1dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/pay_relay"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="支付"
                    android:textSize="15sp"
                    android:textColor="@color/color333"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/pay_riv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/next_forward"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:layout_height="1dp"></RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/pay_rv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/fenrelay2"
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:visibility="gone"
                android:layout_height="1dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/ticket_relay"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="发票"
                    android:textSize="15sp"
                    android:textColor="@color/color333"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ticket_riv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/next_forward"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:layout_height="1dp"></RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ticket_rv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/fenrelay3"
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:visibility="gone"
                android:layout_height="1dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/illegal_relay"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="违章"
                    android:textSize="15sp"
                    android:textColor="@color/color333"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/illegal_riv"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/next_forward"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:layout_height="1dp"></RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/illegal_rv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/fenrelay4"
                android:layout_width="match_parent"
                android:background="@color/colorcc"
                android:visibility="gone"
                android:layout_height="1dp"></RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
