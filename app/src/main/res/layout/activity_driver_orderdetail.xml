<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/moren_f2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="43dp">
        <TextView
            android:id="@+id/title_tv1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dimen_left"
            android:textColor="@color/coloryellow"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="订单信息"
            android:textSize="15sp"
            android:textColor="@color/color333"
            android:layout_marginLeft="@dimen/dimen_left"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/orderNo_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_left"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/view_fengexian"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_left"
        android:paddingRight="@dimen/dimen_left"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="车牌号"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/carNo_tv"
                android:layout_width="wrap_content"
                android:textColor="@color/color666"
                android:layout_marginLeft="33dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="车辆"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/car_name"
                android:layout_width="wrap_content"
                android:textColor="@color/color666"
                android:layout_marginLeft="47dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <include layout="@layout/view_fengexian"></include>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/username_tv"
                android:layout_width="wrap_content"
                android:textColor="@color/color333"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:textColor="@color/color333"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/color333"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/goto_tv"
        style="@style/sure_btnstyle"
        android:text="出发"
        android:layout_marginTop="75dp"
         />
</LinearLayout>
