<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/moren_f2"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/car_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:textColor="@color/color666"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关联订单号"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/orderNo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:textColor="@color/color666"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修商"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/repairshop_nametv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:textColor="@color/color666"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间"
                        android:textColor="@color/color333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/date_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp"
                        android:textColor="@color/color666"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingRight="@dimen/dimen_left"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_left"
                    android:paddingRight="12dp"
                    android:paddingTop="16dp">

                    <RelativeLayout
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:background="@color/fengexian4"></RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_left"
                        android:text="增项描述"
                        android:textColor="@color/color333"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_stroke_a0">

                    <TextView
                        android:id="@+id/describe_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:textColor="@color/color666"/>
                </RelativeLayout>

                <com.dream.moka.CumstomView.MyGridView
                    android:id="@+id/despic_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:numColumns="4"></com.dream.moka.CumstomView.MyGridView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="@dimen/dimen_left"
                android:paddingRight="12dp"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingTop="16dp">

                <RelativeLayout
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:background="@color/fengexian4"></RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_left"
                    android:text="纸质订单"
                    android:textColor="@color/color333"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/dimen_left"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/addzz_iv"
                    android:layout_width="100dp"
                    android:layout_height="120dp"/>

                <ImageView
                    android:id="@+id/partzz_iv"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="@dimen/dimen_left"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/repairMount_relay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/dimen_left"
                    android:layout_marginTop="15dp"
                    android:text="维修商报价单服务及项目"
                    android:textColor="@color/color333"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/oneMoney_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_left"
                    android:textColor="@color/color666"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addMount_relay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/accessories_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/dimen_left"
                    android:layout_marginTop="15dp"
                    android:text="配件费"
                    android:textColor="@color/color333"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/twoMoney_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_left"
                    android:textColor="@color/color666"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/moren_f2"></View>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_relay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/xupay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="合计"
            android:textColor="@color/color333"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/xupay_tv">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/coloryellow"/>

            <TextView
                android:id="@+id/threeMoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="0.00"
                android:textColor="@color/coloryellow"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/blue_them"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>
