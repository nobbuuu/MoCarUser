<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--pop进出的动画-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_down_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/push_up_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!-- animation 样式 -->
    <style name="top2botAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_up_out</item>
        <item name="android:activityOpenExitAnimation">@anim/push_down_in</item>
    </style>

    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="ActionSheetDialogStyle1" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <style name="ActionSheetDialogStyleRL" parent="@android:style/Theme.Dialog">

        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <style name="copytipStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="infoEditor">
        <item name="android:width">250dp</item>
        <item name="android:textColorHint">@color/color98</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>
    
    <style name="textstyle_titleright">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/dimen_left</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="textstyle_titlecenter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/titlesize</item>
    </style>
    <style name="relaystyle_toolbar">
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/blue_them</item>
    </style>
    <style name="relaystyle_back">
        <item name="android:layout_height">@dimen/dimen45</item>
        <item name="android:layout_width">@dimen/dimen45</item>
        <item name="android:layout_marginLeft">@dimen/dimen_left</item>
    </style>
    <style name="imgstyle_back">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/nav_button_back</item>
    </style>
    <style name="imgstyle_next">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/dimen_left</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/next_forward</item>
    </style>
    <style name="sure_btnstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimensurebtn</item>
        <item name="android:layout_marginLeft">@dimen/suremargin_left</item>
        <item name="android:layout_marginRight">@dimen/suremargin_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_login_btn</item>
    </style>
    <style name="order_statutvstyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color666</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="order_btn">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingRight">19dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color333</item>
        <item name="android:background">@drawable/shape_stroke_pay</item>
    </style>
    <style name="bedriver_edtstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">135dp</item>
        <item name="android:background">@drawable/shape_stroke_input</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="bedriver_edtstyle_nobg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="paypwdinput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:password">true</item>
        <item name="android:background">@drawable/shape_stroke_pwd</item>
    </style>

    <style name="chooseTabTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16dp</item>
    </style>

    <!--im-->
    <!-- 标题模板自定义属性 -->
    <declare-styleable name="TemplateTitle">
        <!-- 标题文案 -->
        <attr name="titleText" format="string" />
        <!-- 是否有back按钮 -->
        <attr name="canBack" format="boolean" />
        <!-- back按钮文案 -->
        <attr name="backText" format="string" />
        <!-- 右侧更多功能按钮图片 -->
        <attr name="moreImg" format="reference" />
        <!-- 右侧更多功能按钮文字 -->
        <attr name="moreText" format="string" />
    </declare-styleable>
</resources>
